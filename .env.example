# =============================================================================
# Agentarr Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# =============================================================================

# -----------------------------------------------------------------------------
# Sonarr Configuration
# -----------------------------------------------------------------------------
# Sonarr is used for TV series management and tracking
# Get your API key from: Settings > General > Security > API Key
SONARR_URL=http://localhost:8989
SONARR_API_KEY=your_sonarr_api_key_here

# -----------------------------------------------------------------------------
# Radarr Configuration
# -----------------------------------------------------------------------------
# Radarr is used for movie collection management
# Get your API key from: Settings > General > Security > API Key
RADARR_URL=http://localhost:7878
RADARR_API_KEY=your_radarr_api_key_here

# -----------------------------------------------------------------------------
# Prowlarr Configuration
# -----------------------------------------------------------------------------
# Prowlarr manages indexers for Sonarr and Radarr
# Get your API key from: Settings > General > API Key
PROWLARR_URL=http://localhost:9696
PROWLARR_API_KEY=your_prowlarr_api_key_here

# -----------------------------------------------------------------------------
# Jellyfin Configuration
# -----------------------------------------------------------------------------
# Jellyfin is your media server for streaming content
# Get your API key from: Dashboard > API Keys
JELLYFIN_URL=http://localhost:8096
JELLYFIN_API_KEY=your_jellyfin_api_key_here

# -----------------------------------------------------------------------------
# qBittorrent Configuration
# -----------------------------------------------------------------------------
# qBittorrent is used as the download client
# Default credentials: admin/adminadmin (change these!)
QB_URL=http://localhost:8080
QB_USERNAME=admin
QB_PASSWORD=adminadmin

# -----------------------------------------------------------------------------
# OpenAI Configuration
# -----------------------------------------------------------------------------
# OpenAI API is used for AI-powered agent functionality
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here
MODEL=gpt-4

# -----------------------------------------------------------------------------
# Media Paths Configuration
# -----------------------------------------------------------------------------
# These paths define where your media files are stored
# Use absolute paths for best compatibility
DOWNLOADS_PATH=/path/to/downloads
MOVIES_PATH=/path/to/movies
TV_PATH=/path/to/tv

# Internal URLs (Optional - for Kubernetes/service-to-service communication)
# If not set, the application will fall back to the standard *_URL variables above
# Use these when deploying in containerized environments where the API server
# needs to connect to services via internal service names
INTERNAL_SONARR_URL=
INTERNAL_RADARR_URL=
INTERNAL_PROWLARR_URL=
INTERNAL_JELLYFIN_URL=
INTERNAL_QB_URL=